#include <cairomm/context.h>
#include <cairomm/surface.h>
#include <pangomm.h>
#include <pangomm/init.h>

int main() {
    Pango::init();
    // Create a Cairo surface and context
    auto surface = Cairo::ImageSurface::create(Cairo::FORMAT_RGB24, 200, 100);
    auto cr = Cairo::Context::create(surface);

    // Create a Pango Layout
    auto layout = Pango::Layout::create(cr);
    layout->update_from_cairo_context(cr);

    // Set the text and font description
    Pango::FontDescription font_desc("Sans Bold 16");
    layout->set_font_description(font_desc);
    layout->set_text("Hello, Pangomm!ðŸ˜ƒ");

    // Render the layout
    layout->show_in_cairo_context(cr);

    // Save the surface to a file (optional)
    surface->write_to_png("output.png");

    return 0;
}
